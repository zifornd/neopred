nextflow_process {

    name "Test Process STAR_METRICS"
    script "modules/local/star/metrics/main.nf"
    process "STAR_METRICS"

 test("Should run STAR_METRICS without failures") {

        when {
            process {
                """
                input[0] = [
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/index/star/star.tar.gz', checkIfExists: true)
                ]
                
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.csv},
                { process.out.versions}
            )
        }

    }
    test("Should run GTF2BED with stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    file(params.modules_testdata_base_path + 'genomics/homo_sapiens/genome/index/star/star.tar.gz', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.csv},
                { process.out.versions},
		{assert snapshot(process.out).match()}
            )
        }

    }

}

