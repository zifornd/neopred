nextflow_process{
	name "Test Process GTF2BED"
    script "modules/local/gtf2bed/main.nf"
    process "GTF2BED"
    //config "${projectDir}/tests/nextflow.config"
    
    tag "modules"
    tag "modules_local"
    tag "gtf2bed"

    test("Should run GTF2BED without failures") {

        when {
            process {
                """
                // Print the file path for debugging
                println "GTF file: " + params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.gtf'
                input[0] = [
                   // [id: 'test_gtf'],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.gtf', checkIfExists: true)
                ]
                
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.bed}, //.bed[0] ==~ ".*/genome.bed" },
                { process.out.versions}
            )
        }

    }

    test("Should run GTF2BED with stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                   // [id: 'test_gtf'],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.gtf', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.bed},
                { process.out.versions}
            )
        }

    }

}
