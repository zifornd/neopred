/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf/rima -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    //input  = params.pipelines_testdata_base_path + 'viralrecon/samplesheet/samplesheet_test_illumina_amplicon.csv'
    input              = "${projectDir}/assets/samplesheet.csv"

    // Genome references
    genome                     = null
    igenomes_ignore            = true
    gtf_extra_attributes       = null
    gtf_group_features         = 'gene_name'

    // Known genome resources (optional)
    fasta                 = '/home/sinrasu/reference/GRCh38.primary_assembly_chr6.genome.fa.gz'
    gtf                   = '/home/sinrasu/reference/gencode.v45.primary_assembly_chr6.annotation.gtf.gz'
    dbsnp                 = "/home/sinrasu/GATKBundle/dbsnp_151/dbsnp_151_00-All_chr6.vcf.gz"
    dbsnp_tbi             = "/home/sinrasu/GATKBundle/dbsnp_151/dbsnp_151_00-All_chr6.vcf.gz.tbi"
    //known_indels          = "/home/sinrasu/GATKBundle/known_indels/Mills/Mills_and_1000G_gold_standard.indels_sorted_hg38_chr6.vcf.gz"
    //known_indels_tbi      = "/home/sinrasu/GATKBundle/known_indels/Mills/Mills_and_1000G_gold_standard.indels_sorted_hg38_chr6.vcf.gz.tbi"
    germline_resource     = "/home/sinrasu/GATKBundle/af_only_gnomad/af-only-gnomad_sorted_chr6.vcf.gz"
    germline_resource_tbi = "/home/sinrasu/GATKBundle/af_only_gnomad/af-only-gnomad_sorted_chr6.vcf.gz.tbi"
    pileup_vcf            = "/home/sinrasu/GATKBundle/germline_resource/small_exac_common_3_sorted_hg38_chr6.vcf.gz"
    pileup_vcftbi         = "/home/sinrasu/GATKBundle/germline_resource/small_exac_common_3_sorted_hg38_chr6.vcf.gz.tbi"
    pon                   = "/home/sinrasu/GATKBundle/pon/1000g_pon_sorted_hg38_chr6.vcf.gz"
    pon_tbi               = "/home/sinrasu/GATKBundle/pon/1000g_pon_sorted_hg38_chr6.vcf.gz.tbi"
}
